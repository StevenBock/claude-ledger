{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["hooks/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "hooks/dist"]
}
